package poo;

public class Coche {
	
	private int ruedas;
	
	private int largo;
	
	private int ancho;
	
	private int motor;
	
	private int pes_plataforma;
	
	String color;
	
	int peso_total;
	
	boolean asientos_cuero, climatizador;	
	
	public Coche(){ //metodo constructor= inicializa la clase, tiene el mismo nombre de la clase
		
		ruedas=4;
		
		largo=2000;
		
		ancho=300;
		
		motor=1600;
		
		pes_plataforma=500;
	}


	public String getLargo() {//metodo getter
		return "El largo del coche es: " + largo;
	}
   
	
	public void setcolor(String Color_coche){//metodo setter
		
		color= Color_coche;
	}
	
	public String getcolor(){
		
		return "El color del coche es: " + color;
	}
}
